{
  "name": "harmoneasy",
  "private": true,
  "version": "0.0.8",
  "description": "Web-based MIDI/audio application with Electron desktop support",
  "author": "designerzen <radio@awesomething.co.uk>",
  "type": "module",
  "packageManager": "pnpm@8.0.0",
  "start": "./source/index.ts",
  "scripts": {
	"setup":"pnpm install --allow-build=electron",
    "test": "vitest",
    "dev": "vite",
    "dev:electron": "concurrently \"npm run dev\" \"wait-on http://localhost:5174 && electron .\"",
    "start": "pnpm run dev",
    "build": "vite build",
    "build:electron": "vite build && electron-builder",
    "build-native": "node-gyp rebuild --directory=.",
    "build-native:clean": "node-gyp clean && node-gyp configure && node-gyp build",
    "preview": "vite preview",
    "electron": "electron .",
    "upgrader": "npx npm-check-updates --interactive -u"
  },
  "devDependencies": {
    "@types/react": "^19.2.8",
    "@types/web-bluetooth": "^0.0.21",
    "concurrently": "^9.2.1",
    "electron": "^40.0.0",
    "electron-builder": "^26.4.0",
    "node-addon-api": "^8.5.0",
    "node-gyp": "^12.1.0",
    "partykit": "0.0.115",
    "sass-embedded": "^1.97.2",
    "turbo": "^2.3.2",
    "typescript": "~5.9.3",
    "vite": "^7.3.1",
    "vitest": "^4.0.17",
    "wait-on": "^9.0.3",
    "webrtc-adapter": "^9.0.3"
  },
  "main": "electron-main.js",
  "dependencies": {
    "@audiotool/nexus": "^0.0.9",
    "@msgpack/msgpack": "^3.1.3",
    "@tonejs/midi": "^2.0.28",
    "@xyflow/react": "^12.10.0",
    "entitree-flex": "^0.4.1",
    "fflate": "^0.8.2",
    "jzz": "^1.9.6",
    "lz-string": "^1.5.0",
    "partysocket": "1.1.10",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "standardized-audio-context": "^25.3.77",
    "supersonic-scsynth-bundle": "^0.28.1",
    "uWebSockets.js": "github:uNetworking/uWebSockets.js",
    "vexflow": "^5.0.0",
    "webmidi": "^3.1.14"
  },
  "build": {
    "appId": "com.harmoneasy.app",
    "productName": "Harmoneasy",
    "directories": {
      "buildResources": "public"
    },
    "files": [
      "dist/**/*",
      "electron-main.js",
      "node_modules/**/*",
      "package.json"
    ],
    "win": {
      "target": [
        "nsis",
        "portable"
      ]
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
